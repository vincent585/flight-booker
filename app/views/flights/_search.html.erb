<%= form_with url: '/flights', method: :get do |form| %>
    <%= form.label :departure_airport, 'Departure airport' %>
    <%= form.select :departure_airport, airport_options %>
    <%= form.label :arrival_airport, 'Arrival airport' %>
    <%= form.select :arrival_airport, airport_options %>
    <%= form.label :departure_day, 'Day' %>
    <%= form.select :departure_day, departure_dates.map(&:day).uniq.sort %>
    <%= form.label :departure_month, 'Month' %>
    <%= form.select :departure_month, departure_dates.map(&:month).uniq.sort %>
    <%= form.label :departure_year, 'Year' %>
    <%= form.select :departure_year, departure_dates.map(&:year).uniq.sort %>
    <%= form.label :passenger_count, 'Number of passengers' %>
    <%= form.select :passenger_count, %w[1 2 3 4]%>
    <%= form.submit 'Search' %>
<% end %>
